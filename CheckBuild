pipeline {
	environment{
		device = "iPhone 7"
		platformVersion = "10.2"
	}

	agent any

	stages {
		stage('Running Test'){
			agent {
				label "localku"
			}
			steps {
				echo 'Running important automation ...'
      			sh './gradlew clean test -Ddevice='+device+' -DplatformVersion='+platformVersion
			}
		}
	}
}
